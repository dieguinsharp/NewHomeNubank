<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NubankClone.App">
    <Application.Resources>
        
        <Color x:Key="CorLabelApp">#000000</Color>
        <Color x:Key="Roxinho">#830ad1</Color>

        <Style TargetType="{x:Type Label}">
            <Setter Property="TextColor"
                    Value="{StaticResource CorLabelApp}" />
        </Style>

        <Style TargetType="{x:Type StackLayout}">
            <Setter Property="BackgroundColor"
                    Value="{StaticResource Roxinho}" />
        </Style>


        <ResourceDictionary>
            <OnPlatform x:TypeArguments="x:String" x:Key="FontePadrao">
                <On Platform="Android" Value="Roboto-Bold.ttf"/>
            </OnPlatform>
        </ResourceDictionary>



    </Application.Resources>
</Application>